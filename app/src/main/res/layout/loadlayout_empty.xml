<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="68dp">

    <ImageView
        android:id="@+id/img_shy"
        android:layout_width="@dimen/breadicon_shy_width"
        android:layout_height="@dimen/breadicon_shy_height"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shy" />

    <TextView
        android:id="@+id/loading_empty_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_shy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="@string/tv_empty"
        android:textColor="@color/color_ffDFD3B6" />


</RelativeLayout>
